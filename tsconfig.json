{
    "version": "1.5.0",
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!./node_modules/**/*.ts",
        "!gulpfile.ts"
    ],
    "files": [
        "./src/index.ts",
        "./src/public/js/color-war.ts",
        "./src/server/static.ts"
    ]
}
