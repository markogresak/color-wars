{
    "version": "1.5.0",
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./src/index.ts",
        "./src/public/app.ts",
        "./src/server/static.ts",
        "./typings/angular2/angular2.d.ts",
        "./typings/chai/chai.d.ts",
        "./typings/express/express.d.ts",
        "./typings/gulp-autoprefixer/gulp-autoprefixer.d.ts",
        "./typings/gulp-less/gulp-less.d.ts",
        "./typings/gulp-tslint/gulp-tslint.d.ts",
        "./typings/gulp-typedoc/gulp-typedoc.d.ts",
        "./typings/gulp-typescript/gulp-typescript.d.ts",
        "./typings/gulp/gulp.d.ts",
        "./typings/mocha/mocha.d.ts",
        "./typings/node/node.d.ts",
        "./typings/tsd.d.ts"
    ]
}
